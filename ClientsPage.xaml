<Page x:Class="Baibakov4122UfanetCourseWork.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Baibakov4122UfanetCourseWork"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <Grid>
        <ListView Name="ClientsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition MinWidth="350"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" Source="{Binding photoOptimized}" Height="175" Margin="0" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="ID" FontWeight="Bold" Grid.Column="1" Grid.Row="0"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="ФИО" FontWeight="Bold" Grid.Column="1" Grid.Row="1"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="Паспорт серия/номер" FontWeight="Bold" Grid.Column="1" Grid.Row="2"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="Адрес" FontWeight="Bold" Grid.Column="1" Grid.Row="3"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="Телефон" FontWeight="Bold" Grid.Column="1" Grid.Row="4"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="Почта" FontWeight="Bold" Grid.Column="1" Grid.Row="5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.RowSpan="3"  Grid.Column="2" Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding client_id}" Grid.Column="2" Grid.Row="0"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding full_name}" Grid.Column="2" Grid.Row="1"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding passport_data}" Grid.Column="2" Grid.Row="2"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding address}" Grid.Column="2" Grid.Row="3"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding phone}" Grid.Column="2" Grid.Row="4"/>
                            <TextBlock Style="{StaticResource DefaultTextBlockStyle}" Text="{Binding email}" Grid.Column="2" Grid.Row="5"/>
                        </StackPanel>

                        <Button Style="{StaticResource RoundedButtonStyle}" Name="ClientEditButton" Content="Редактировать" Width="auto" Grid.Column="3" Grid.Row="0" VerticalAlignment="Bottom"/>
                        <Button Style="{StaticResource RoundedButtonStyle}" Name="ClientContractButton" Content="Активные договоры" Width="auto" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource RoundedButtonStyle}" Name="ClientAddContractButton" Content="Добавить договор" Width="auto" Grid.Column="3" Grid.Row="2" VerticalAlignment="Top"/>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
