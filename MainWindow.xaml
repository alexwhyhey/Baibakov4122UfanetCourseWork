<Window x:Class="Baibakov4122UfanetCourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baibakov4122UfanetCourseWork"
        mc:Ignorable="d"
        Title="Baibakov Rustam" Height="450" Width="800" FontFamily="Century Gothic" Icon="Resources/logo_png.png" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="Resources/logo_png.png" HorizontalAlignment="Left" Margin="5"/>
        <TextBlock Name="MainPageTextBlock" Text="Список клиентов" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="40" Height="40" Name="PageChangeButton" Click="PageChangeButton_Click" Background="Transparent" BorderThickness="0" Padding="0" Margin="20,0,20,0"> 
                <Image Source="Resources/tariffs_page.png" Name="PageRouteImage" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Name="back_btn" Content="Назад" HorizontalAlignment="Right" Click="back_btn_Click" Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0,20,0">
            <TextBlock Name="CountTB" Text="Записей: " Margin="10,0,10,0"/>
            <TextBlock Name="CurrentCountTB" Text="0"/>
            <TextBlock Name="OfTB" Text=" из " Margin="5,0,5,0"/>
            <TextBlock Name="AllCountTB" Text="0"/>
        </StackPanel>
    </Grid>
</Window>
